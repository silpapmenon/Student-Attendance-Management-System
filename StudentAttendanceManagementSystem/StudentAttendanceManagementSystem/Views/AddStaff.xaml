<UserControl x:Class="StudentAttendanceManagementSystem.Views.AddStaff"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentAttendanceManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    <Grid Height="630"  VerticalAlignment="Center" >
        <Grid.RowDefinitions>
            <RowDefinition Height="209*"/>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="293*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <ListView Name="UserGrid" Margin="0,10,0,10"  >
            <DataGrid Name="grdProductData" AutoGenerateColumns="False" CanUserAddRows="False" MaxColumnWidth="80" SelectionChanged="grdProductData_SelectionChanged" Margin="10,15,268,82" ItemsSource="{Binding StaffViewList}" Height="158" Width="977">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="StaffID" Width="50" Binding="{Binding StaffID}"  />
                    <DataGridTextColumn Header="Name" Width="60" Binding="{Binding StaffName}" />
                    <DataGridTextColumn Header="Email" Width="60" Binding="{Binding StaffEmail}" />
                    <DataGridTextColumn Header="Gender" Width="30" Binding="{Binding StaffGender}" />
                    <!--<DataGridTextColumn Header="Gender" Width="50" Binding="{Binding }"/>-->
                    <DataGridTextColumn Header="Mobile" Width="70" Binding="{Binding StaffMobile}" />
                    <DataGridTextColumn Header="Qualification" Width="80" Binding="{Binding Qualification}" />
                    <!--<DataGridTextColumn Header="Image"  Width="45" Binding="{Binding StaffImage}"/>-->
                    <DataGridTextColumn Header="Address" Width="70" Binding="{Binding StaffAddress}"/>
                    <DataGridTextColumn Header="City" Width="50" Binding="{Binding StaffCity}"/>
                    <DataGridTextColumn Header="Pincode" Width="55" Binding="{Binding StaffPincode}"/>
                    <DataGridTextColumn Header="Username" Width="65" Binding="{Binding StaffUserName}"/>
                    <DataGridTextColumn Header="Password" Width="65" Binding="{Binding StaffPassword}"/>

                    <DataGridTemplateColumn Header="Edit" Width="30">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="Button_Click">Edit</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ListView>
        <Grid Margin="192,208,131,95"  Grid.RowSpan="4">
            <Label Content="Add Staff" HorizontalAlignment="Left" Margin="280,4,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
            <Label Content="StaffID" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold"/>
            <Label Content="Name" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold"/>
            <Label Content="Address" HorizontalAlignment="Left" Margin="346,35,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold" />
            <Label Content="Mobile" HorizontalAlignment="Left" Margin="346,77,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold"/>
            <Label Content="Qualification" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold"/>
            <Label Content="Email" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold"/>
            <Label Content="City" HorizontalAlignment="Left" Margin="350,120,0,0" VerticalAlignment="Top" Width="106" FontWeight="Bold"/>
            <Label Content="Pincode" HorizontalAlignment="Left" Margin="7,185,0,111" Width="107" FontWeight="Bold"/>
            <Label Content="Gender" HorizontalAlignment="Left" Margin="352,156,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Username" HorizontalAlignment="Left" Margin="10,216,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Password" HorizontalAlignment="Left" Margin="349,195,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="280,274,0,0" VerticalAlignment="Top" Width="140" Height="43"  FontSize="18" FontWeight="Bold" Command="{Binding Submit}"/>
            <TextBox x:Name="txtstaffID" HorizontalAlignment="Left" Margin="139,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" FontSize="14" Text="{Binding StaffID}"/>
            <TextBox x:Name="txtStaffName" HorizontalAlignment="Left" Margin="139,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" FontSize="14" Text="{Binding StaffName}" />
            <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Background="White" Margin="498,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" FontSize="14" Text="{Binding StaffAddress}" />
            <TextBox x:Name="txtStaffMobile" HorizontalAlignment="Left" Margin="498,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" FontSize="14" Text="{Binding StaffMobile}" />
            <!--<TextBox x:Name="txtDob" HorizontalAlignment="Left" Margin="139,178,0,276"   TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" FontSize="14"/>-->
            <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="139,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" FontSize="14" Text="{Binding StaffEmail}"/>
            <TextBox x:Name="txtCity" HorizontalAlignment="Left" Margin="498,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" FontSize="14" Text="{Binding StaffCity}"/>
            <TextBox x:Name="txtPincode" HorizontalAlignment="Left" Margin="139,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" FontSize="14" Text="{Binding StaffPincode}"/>
            <TextBox x:Name="txtqualification" HorizontalAlignment="Left" Height="28" Margin="139,112,0,0" VerticalAlignment="Top" Width="140" Text="{Binding Qualification}"/>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="139,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" Height="22" FontSize="14" Text="{Binding StaffUsername}"/>
            <TextBox x:Name="pwdUsername" HorizontalAlignment="Left" Margin="498,194,0,0"  VerticalAlignment="Top" Width="140" Height="22" FontSize="14" Text="{Binding StaffPassword}"/>
            <ComboBox x:Name="txtgender" HorizontalAlignment="Left" Height="20" Margin="498,152,0,0" VerticalAlignment="Top" Width="140">
                <TextBlock Text="1"></TextBlock>
                <TextBlock Text="2"></TextBlock>
                <TextBlock Text="3"></TextBlock>
            </ComboBox>
            <Button x:Name="btnedit" Content="Edit" HorizontalAlignment="Left" Margin="486,274,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="24" Width="152" Height="43" Click="btnedit_Click"/>
        </Grid>
        
    </Grid>
</UserControl>
    