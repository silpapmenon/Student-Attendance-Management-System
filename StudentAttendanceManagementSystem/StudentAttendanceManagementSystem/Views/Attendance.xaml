<UserControl x:Class="StudentAttendanceManagementSystem.Views.Attendance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentAttendanceManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">
    <Grid Height="568" VerticalAlignment="Center">
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Attendance.jpeg" />
        </Grid.Background>

        <DataGrid Opacity="0.6" d:ItemsSource="{d:SampleData ItemCount=5}" AutoGenerateColumns="False" Margin="344,376,318,23" RenderTransformOrigin="1.04,0.521">
            <DataGrid.Columns>
                <DataGridTextColumn Header="RollNo"/>
                <DataGridTextColumn Header="StudentName"/>
                <DataGridTextColumn Header="Standard"/>
                <DataGridTextColumn Header="Division"/>
                <DataGridTextColumn Header="Status"/>
            </DataGrid.Columns>

        </DataGrid>
        <Label x:Name="lblselectstandard" Content="Select Standard" HorizontalAlignment="Left" Margin="119,28,0,0" VerticalAlignment="Top" Width="105" Height="35" Background="White"/>
        <Label x:Name="lblselectdivision" Content="Select Division" HorizontalAlignment="Left" Margin="119,110,0,0" VerticalAlignment="Top" Width="105" Background="White"/>
        <ComboBox x:Name="cmbSelectdivision" HorizontalAlignment="Left" Margin="284,107,0,0" VerticalAlignment="Top" Width="120" Height="26" ItemsSource="{Binding StudentDivision}" DisplayMemberPath="DivisionName"/>

        <Button x:Name="btndivision" Content="SELECT" HorizontalAlignment="Left" Margin="466,146,0,0" VerticalAlignment="Top" Height="26" Width="121" Background="RED"/>
        <ComboBox HorizontalAlignment="Left" Margin="284,28,0,0" VerticalAlignment="Top" Width="120" Background="White" ItemsSource="{Binding StudentStandard}" DisplayMemberPath="StandardName"/>
        <DatePicker HorizontalAlignment="Left" Margin="702,28,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblrollno" Content="Roll No" HorizontalAlignment="Left" Margin="119,199,0,0" VerticalAlignment="Top" Width="105" Background="White"/>
        <TextBox x:Name="txtrollno" HorizontalAlignment="Left" Margin="284,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26"/>
        <Label x:Name="lblstudentname" Content="Student Name" HorizontalAlignment="Left" Margin="119,0,0,0" VerticalAlignment="Center" Width="105" Background="White"/>
        <TextBox x:Name="txtstudentname" HorizontalAlignment="Left" Margin="284,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="26"/>
        <Label x:Name="lblstatus" Content="Status" HorizontalAlignment="Left" Margin="119,330,0,0" VerticalAlignment="Top" Width="105" Background="White"/>
        <TextBox x:Name="Txtstatus" HorizontalAlignment="Left" Margin="284,325,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="31"/>

    </Grid>
</UserControl>