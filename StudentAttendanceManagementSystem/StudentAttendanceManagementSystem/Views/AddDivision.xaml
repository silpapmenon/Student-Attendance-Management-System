<UserControl x:Class="StudentAttendanceManagementSystem.Views.AddDivision"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentAttendanceManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="188" VerticalAlignment="Top">
        <Grid.Background>
            <ImageBrush  Opacity="0.8"/>
        </Grid.Background>
        <ListView Name="UserGrid" Grid.Row="1"  ItemsSource="{Binding Division}" >
            <DataGrid Name="grdStandardData" AutoGenerateColumns="False" CanUserAddRows="False" ColumnWidth="*" Width="864" Height="174">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Division Name" Binding="{Binding ProductId}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Standard Name" Binding="{Binding ProductId}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Seat" Binding="{Binding ProductId}" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Edit">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="Button_Click">Edit</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Delete">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Click="Button_Click_1">Delete</Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ListView>
        <Grid Margin="0,193,476,-342">

            <Label Content="Division Name" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold"/>

            <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="146,168,0,0" VerticalAlignment="Top" Width="89" Height="32" FontSize="18" FontWeight="Bold" Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
            <TextBox x:Name="txtDivisionName" HorizontalAlignment="Left" Margin="139,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="22" FontSize="14" Text="{Binding ElementName=UserGrid,Path=SelectedItem.StandardName}"/>
            <Label Content="Seat" HorizontalAlignment="Left" Margin="34,88,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Margin="141,89,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="130" Height="25"/>
            <Label Content="Standard Name" HorizontalAlignment="Left" Margin="25,117,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <ComboBox HorizontalAlignment="Left" Margin="144,121,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged">
                <TextBlock Text="LKG"></TextBlock>
                <TextBlock Text="UKG"></TextBlock>
                <TextBlock Text="FIRST"></TextBlock>
                <TextBlock Text="SECOND"></TextBlock>
                <TextBlock Text="THIRD"></TextBlock>
                <TextBlock Text="FOURTH"></TextBlock>
            </ComboBox>


        </Grid>
        <Grid Margin="464,193,12,-342">

            <Label Content="Standard Name" HorizontalAlignment="Left" Margin="20,115,0,0" VerticalAlignment="Top" Width="107" FontWeight="Bold" RenderTransformOrigin="0.611,0.617"/>

            <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Margin="172,161,0,0" VerticalAlignment="Top" Width="84" Height="31" FontSize="18" FontWeight="Bold" Background="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>

            <Label Content="Seat" HorizontalAlignment="Left" Margin="29,77,0,0" VerticalAlignment="Top"  FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Margin="162,77,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="26" RenderTransformOrigin="0.713,0.136"/>
            <ComboBox HorizontalAlignment="Left" Margin="164,116,0,0" VerticalAlignment="Top" Width="120">
                <TextBlock Text="LKG"></TextBlock>
                <TextBlock Text="UKG"></TextBlock>
                <TextBlock Text="FIRST"></TextBlock>
                <TextBlock Text="SECOND"></TextBlock>
                <TextBlock Text="THIRD"></TextBlock>
                <TextBlock Text="FOURTH"></TextBlock>
            </ComboBox>
            <Label Content="Division Name" HorizontalAlignment="Left" Margin="22,43,0,0" VerticalAlignment="Top"  FontWeight="Bold"/>
            <TextBox HorizontalAlignment="Left" Margin="158,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>


        </Grid>

    </Grid>
</UserControl>
