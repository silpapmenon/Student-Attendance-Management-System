<UserControl x:Class="StudentAttendanceManagementSystem.Views.StaffProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentAttendanceManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="My Profile" FontWeight="Bold" Margin="10" Background="#eb8dde" Foreground="White"></Label>
        <Grid Background="White" Margin="0,42,0,-2">
            <Label x:Name="lblEmail" Content="Email" HorizontalAlignment="Left" Margin="281,221,0,0" VerticalAlignment="Top" FontSize="14" Width="80" Height="28"/>
            <Label x:Name="lblMobile" Content="Mobile" HorizontalAlignment="Left" Margin="280,257,0,0" VerticalAlignment="Top" FontSize="14" Width="80" Height="28"/>
            <Label x:Name="lblAddress" Content="Address" HorizontalAlignment="Left" Margin="280,290,0,0" VerticalAlignment="Top" FontSize="14" Width="80" Height="28"/>
            <Label x:Name="lblCity" Content="City" HorizontalAlignment="Left" Margin="531,133,0,0" VerticalAlignment="Top" FontSize="14" Width="80" Height="28"/>
            <Label x:Name="lblPincode" Content="Pincode" HorizontalAlignment="Left" Margin="531,167,0,0" VerticalAlignment="Top" FontSize="14" Width="80" Height="28"/>
            <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="625,304,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" Click="btnUpdate_Click" Foreground="White" Background="#eb8dde"/>
            <TextBox x:Name="txtMobile" HorizontalAlignment="Left" Margin="373,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
            <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="373,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
            <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="373,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
            <TextBox x:Name="txtCity" HorizontalAlignment="Left" Margin="644,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
            <TextBox x:Name="txtPincode" HorizontalAlignment="Left" Margin="645,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
            <Label x:Name="lblName" Content="Name " HorizontalAlignment="Left" Margin="280,186,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Normal" Foreground="#FF150E14" Width="80" Height="28"/>
            <Label x:Name="lblRollno" Content="Standard " HorizontalAlignment="Left" Margin="279,147,0,0" VerticalAlignment="Top" FontSize="14" FontStyle="Normal" FontWeight="Normal" Foreground="#FF20121E" Width="80" Height="28"/>
            <TextBox x:Name="txtRollNo" HorizontalAlignment="Left" Margin="373,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
            <Label x:Name="lblUsername" Content="Username" HorizontalAlignment="Left" Margin="531,209,0,0" VerticalAlignment="Top" FontSize="14" Width="80" Height="28"/>
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="644,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
            <Label x:Name="lblPassword" Content="Password" HorizontalAlignment="Left" Margin="532,247,0,0" VerticalAlignment="Top" FontSize="14" Width="80" Height="28"/>
            <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="644,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
            <Grid Margin="100,20,0,0">


                <DataGrid Name="grdstaffdetail" AutoGenerateColumns="False" Height="115" VerticalAlignment="Top" RenderTransformOrigin="0.511,0.7">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding StaffName}"/>
                        <DataGridTextColumn Header="Email" Width="50"/>
                        <DataGridTextColumn Header="Mobile"/>
                        <DataGridTextColumn Header="Address"/>
                        <DataGridTextColumn Header="City"/>
                        <DataGridTextColumn Header="Pincode"/>
                        <DataGridTextColumn Header="Username"/>
                        <DataGridTextColumn Header="Password"/>
                        <DataGridTemplateColumn Header="Edit" Width="35">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="Button_Click">Edit</Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>



                </DataGrid>
            </Grid>
            <TextBox x:Name="txtName1" HorizontalAlignment="Left" Height="25" Margin="373,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        </Grid>
    </Grid>
</UserControl>
