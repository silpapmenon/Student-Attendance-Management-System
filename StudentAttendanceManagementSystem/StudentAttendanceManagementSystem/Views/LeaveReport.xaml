<UserControl x:Class="StudentAttendanceManagementSystem.Views.LeaveReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentAttendanceManagementSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="88,58,247,268" AutoGenerateColumns="False" ItemsSource="{Binding LeaveReport}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Leave ID" Binding="{Binding LeaveID}"/>
                <DataGridTextColumn Header="Roll No" Binding="{Binding RollNo}"/>
                <DataGridTextColumn Header="Message" Binding="{Binding Message}"/>
                <DataGridTextColumn Header="NumDays" Binding="{Binding NumDays}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Standard Name" Binding="{Binding Standard}"/>
                <DataGridTextColumn Header="Division Name" Binding="{Binding Division}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
